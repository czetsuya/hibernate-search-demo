<?xml version="1.0" encoding="UTF-8"?>
<!-- Persistence deployment descriptor for dev profile -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="hibernate-search-example">
		<jta-data-source>java:jboss/datasources/hibernate-search-demoDS</jta-data-source>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.show_sql" value="false" />

			<!-- optional -->
			<property name="hibernate.search.default.directory_provider"
				value="infinispan" />
			<property name="hibernate.search.infinispan.cache_jndiname"
				value="java:jboss/infinispan/broodcampHibernateSearch" />
			<property name="hibernate.search.query.object_lookup_method"
				value="second_level_cache" />
			<property
				name="hibernate.search.query.database_retrieval_method"
				value="query" />

			<!-- Lucene -->
			<!-- <property name="hibernate.search.default.directory_provider" -->
			<!-- value="filesystem" /> -->
			<!-- <property name="hibernate.search.default.indexBase" -->
			<!-- value="c:/temp/lucene/indexes" /> -->

			<property name="jboss.as.jpa.providerModule"
				value="org.hibernate:5.3" />
			<property name="wildfly.jpa.hibernate.search.module"
				value="org.hibernate.search.orm:5.10.3.Final" />

			<property name="hibernate.search.default.indexmanager"
				value="elasticsearch" />
			<property name="hibernate.search.default.elasticsearch.host"
				value="http://127.0.0.1:9200" />
			<property
				name="hibernate.search.default.elasticsearch.index_schema_management_strategy"
				value="CREATE" />
			<property
				name="hibernate.search.default.elasticsearch.username"
				value="elastic" />
			<property
				name="hibernate.search.default.elasticsearch.password"
				value="changeme" />
		</properties>
	</persistence-unit>
</persistence>
